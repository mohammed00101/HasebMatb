<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.abdulrahman.hasebmatb.activities.SignupActivity" >


<LinearLayout
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >



<ImageView
    android:layout_marginTop="50dp"
    android:src="@drawable/logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <com.abdulrahman.hasebmatb.helper.CustomTextView
        android:id="@+id/signup_backtoLogin"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textDirection="rtl"
        android:textColor="#fff"
        android:paddingRight="38dp"
        android:textStyle="bold"
        android:text="مستخدم ؟ سجل دخولك الأن "
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/signup_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="2"
        android:layout_marginRight="30dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp">


        <com.abdulrahman.hasebmatb.helper.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="اسم المستخدم "
            android:paddingLeft="15dp"
            android:textColor="#99a0ab"
            android:layout_weight="1"
            android:textColorHint="#99a0ab"
            android:paddingRight="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:id="@+id/signup_username_editTxt" />
        <ImageView
            android:src="@drawable/user"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="2"
        android:layout_marginRight="30dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp">


        <com.abdulrahman.hasebmatb.helper.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="الإيميل"
            android:textColor="#99a0ab"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColorHint="#99a0ab"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"
            android:id="@+id/signup_email_editTxt" />
        <ImageView
            android:src="@drawable/email"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="2"
        android:layout_marginRight="30dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp">
        <com.abdulrahman.hasebmatb.helper.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="كلمة السر"
            android:layout_marginLeft="20dp"
            android:textColor="#99a0ab"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textColorHint="#99a0ab"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            tools:ignore="RtlCompat"
            android:id="@+id/signup_password_editTxt" />
        <ImageView
            android:src="@drawable/lock"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            />
    </LinearLayout>
    <com.abdulrahman.hasebmatb.helper.CustomButton
        android:background="@drawable/rounded_btn"
        android:layout_width="match_parent"
        android:text="إنشاء حساب "
        android:textColor="#fff"
        android:layout_marginLeft="70dp"
        android:id="@+id/signup_login"

        android:textSize="15sp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:layout_height="40dp"
        android:onClick="send_signup_data"
        android:nestedScrollingEnabled="false" />
    <com.abdulrahman.hasebmatb.helper.CustomButton
        android:background="@drawable/rounded_btn"
        android:layout_width="match_parent"
        android:text="دخول بدون تسجيل"
        android:textColor="#fff"
        android:id="@+id/signup_skipTohome"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        />
</LinearLayout>
</ScrollView>
