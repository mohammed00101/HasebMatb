<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="#ddd4d4">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_image_name_holder">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:id="@+id/user_name_location_holder">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:id="@+id/username"
                    android:textSize="14dp"
                    android:text="Bassem Yousef"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maadi"
                    android:textColor="#bababa"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:maxWidth="60dp"
                    android:id="@+id/location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:layout_marginLeft="3dp"
                    android:textColor="#bababa"
                    android:textSize="10sp"
                    android:id="@+id/dot"
                    android:layout_toRightOf="@id/location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/dot"
                    android:layout_marginLeft="3dp"
                    android:text="58sec"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#bababa"
                    android:textSize="10sp"
                    android:id="@+id/timeAgo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#bababa"
                    android:textSize="10sp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/dot2"
                    android:layout_toRightOf="@id/timeAgo"/>

            </RelativeLayout>
            <TextView
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#aeaaaa"
                android:id="@+id/post_textview"
                android:textSize="14dp"
                android:text="Bassem Yousef"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_height="1dp"
        android:background="#ddd4d4">

    </View>

</LinearLayout>
    </RelativeLayout>